@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Edit @Model.Name</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  <div class="mb-3">
    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)
  </div>
  <div>
    @Html.LabelFor(model => model.ModelNumber)
    @Html.EditorFor(model => model.ModelNumber)
  </div>

  <input class="btn-primary" type="submit" value="Save" />
}
<hr />
<p>@Html.ActionLink($"Back to {Model.Name} Details", "Details", new { id = Model.MachineId })</p>
<p>@Html.ActionLink("Back to Machine List", "Index")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>