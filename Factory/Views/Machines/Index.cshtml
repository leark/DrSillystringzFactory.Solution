@{
  Layout = "_Layout";
}

@using Factory.Models;

<h1>List of All Machines</h1>
<hr />
@if (@Model.Count == 0)
{
  <h3>No machines have been added yet.</h3>
}
else
{
  <ul>
    @foreach (Machine machine in Model)
    {
      <div>
        <li>@Html.ActionLink($"{machine.Name} : {machine.ModelNumber}", "Details", new { id = machine.MachineId })</li>
      </div>
    }
  </ul>
}
<hr />
<p>@Html.ActionLink("Add New Machine", "Create")</p>
<p>@Html.ActionLink("Go Back Home", "Index", "Home")</p>