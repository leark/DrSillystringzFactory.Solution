@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h2>Add an Engineer</h2>
<hr />
@if (ViewBag.Duplicate)
{
  <h4 class="warning">Engineer already exists in the database.</h4>
}

@using (Html.BeginForm())
{
  <div class="mb-3">
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new { required = "required" })
  </div>

  <input type="submit" value="Add Engineer" />
}

<hr />
<p>@Html.ActionLink("Back to Engineer List", "Index")</p>
<p>@Html.ActionLink("Go Back Home", "Index", "Home")</p>
