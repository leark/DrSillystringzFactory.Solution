@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h2>Edit @Model.Name</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)

  <div class="mb-3">
    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)
  </div>

  <input class="btn-primary" type="submit" value="Save" />
}
<hr />
<p>@Html.ActionLink($"Back to {Model.Name} Details", "Details", new { id = Model.EngineerId })</p>
<p>@Html.ActionLink("Back to Engineer List", "Index")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>